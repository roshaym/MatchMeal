     <div class="container-fluid p-0">

  <div class="banner position-relative">

      <a href="<%= recipes_path %>" class="btn btn-link text-white position-absolute top-0 start-0 m-3">
      <i class="fas fa-arrow-left fa-2x"></i>
    </a>

    <h1 class="fw-bold ms-3 position-absolute top-0 start-0 text-white" style="font-size: 2rem; margin-top: 50px;">
  <%= @recipe.name %>
</h1>

    <% if current_user.favorites.exists?(recipe: @recipe) %>
      <%= button_to recipe_favorite_path(@recipe), method: :delete, remote: true, class: "btn btn-link position-absolute top-0 end-0 m-3" do %>
        <i class="fas fa-heart text-danger fa-2x"></i>
      <% end %>
    <% else %>
      <%= button_to recipe_favorites_path(@recipe), method: :post, remote: true, class: "btn btn-link position-absolute top-0 end-0 m-3" do %>
        <i class="far fa-heart text-white fa-2x"></i>
      <% end %>

    <% end %>

    <% if @recipe.image.present? %>
      <img src="<%= @recipe.image %>" alt="<%= @recipe.name %>" class="w-100 h-100 object-fit-cover banner-image">
    <% else %>
      <div class="bg-secondary w-100 h-100 banner-placeholder text-white text-center d-flex align-items-center justify-content-center">
        <p><em>No image available for this recipe.</em></p>
      </div>
    <% end %>

<div class="banner-overlay-bottom position-absolute start-0 end-0 bottom-0 text-white" style="border-radius: 20px; padding: 30px; margin: 20px;">
     <div class="container mt-5">
    <div class="card shadow-sm">

    </div>
  </div>

  <div class="container p-4">
    <p class="mt-2"><%= @recipe.description %></p>

    <h5 class="mt-3">Ingredients:</h5>
    <ul class="list-unstyled">
      <% @recipe.ingredients.split("\n").each do |ingredient| %>
        <li><i class="bi bi-dot"></i> <%= ingredient %></li>
      <% end %>
    </ul>

    <p><strong>Cooking Time:</strong> <%= @recipe.cooking_time %> minutes</p>
    <p><strong>Rating:</strong> <%= @recipe.rating %>/5</p>
  </div>
</div>

  </div>
</div>

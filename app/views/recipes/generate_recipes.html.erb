<h1>Suggested recipes</h1>
<% @posts.each do |post| %>
  <div class="recipe">
    <h2><%= post["title"] %></h2>
    <img src="<%= post["image"] %>" alt="<%= post["title"] %>">
    <p>Used ingredient count: <%= post["usedIngredientCount"] %></p>
    <p>Missed ingredient count: <%= post["missedIngredientCount"] %></p>
    <p>Used ingredients: </p>
    <ul>
      <% post["usedIngredients"].each do |ingredient| %>
        <li><%= ingredient["name"] %> (<%= ingredient["amount"] %> <%= ingredient["unit"] %>)</li>
      <% end %>
    </ul>
  </div>
<% end %>

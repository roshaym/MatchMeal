<%= form_with(model: @user, local: true) do |form| %>
  <%= form.label :profile_picture %>
  <%= form.file_field :profile_picture %>
  <%= form.submit %>
<% end %>


<%= form_with model: @user, url: user_path(@user), method: :patch, local: true, data: { controller: 'profile-form' } do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", value: @user.first_name %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", value: @user.last_name %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", value: @user.email %>
  </div>

  <div class="form-group">
    <%= form.label :profile_picture %>
    <%= form.file_field :profile_picture, class: "form-control" %>
    <% if @user.profile_picture.attached? %>
      <img src="<%= @user.profile_picture.url %>" alt="Profile Picture" class="img-thumbnail mt-2" width="150">
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :password, 'New Password' %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, 'Confirm New Password' %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

  <%= form.submit 'Update Profile', class: 'btn btn-primary' %>
<% end %>

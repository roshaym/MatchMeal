<%- if controller_name != 'sessions' %>
  <div class="d-grid">
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary btn-lg rounded-pill shadow-sm mb-2" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="d-grid">
    <%= link_to "Sign up", 
                new_registration_path(resource_name), 
                class: "btn btn-outline-primary btn-lg rounded-pill shadow-sm", 
                style: "background-color: white;" %>
  </div>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link text-decoration-none mt-2" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-link text-decoration-none mt-2" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-link text-decoration-none mt-2" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-secondary btn-lg rounded-pill shadow-sm mt-2", data: { turbo: false } %>
  <% end %>
<% end %>
<div class="container vh-100 d-flex flex-column justify-content-center">
  <div class="row">
    <div class="col-12">
      <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Hello to Match Meal</h1>
        <p class="lead text-muted">Make the most of what's in your kitchen</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), 
                          html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <div class="mb-3">
          <%= f.input :email, 
                      required: false, 
                      autofocus: true, 
                      label: false, 
                      placeholder: "Email address", 
                      input_html: { 
                        class: 'form-control form-control-lg', 
                        autocomplete: "email",
                        placeholder: "Email address"
                      } %>
        </div>

        <div class="mb-3">
          <%= f.input :password, 
                      required: false, 
                      label: false, 
                      placeholder: "Password", 
                      input_html: { 
                        class: 'form-control form-control-lg', 
                        autocomplete: "current-password",
                        placeholder: "Password"
                      } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 form-check">
            <%= f.input :remember_me, 
                        as: :boolean, 
                        wrapper_html: { class: 'form-check' },
                        input_html: { class: 'form-check-input' },
                        label_html: { class: 'form-check-label' } %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.button :submit, 
                       "Log in", 
                       class: "btn btn-primary btn-lg rounded-pill shadow-sm" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
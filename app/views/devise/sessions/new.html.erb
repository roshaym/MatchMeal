<div class="login-container vh-100 d-flex flex-column justify-content-center">
  <div class="row">
    <div class="col-12">
      <div class="text-center mb-5 p-4 rounded shadow-sm title-container" id="auto-fill-trigger">
        <h1 class="display-5 fw-bold text-white">Welcome to MatchMeal</h1>
        <p class="lead text-secondary fw-bold text-light">Make the most of what's in your kitchen</p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                          html: { class: 'needs-validation', novalidate: true, id: 'login-form' }) do |f| %>
        <div class="mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      placeholder: "Email address",
                      input_html: {
                        id: 'email-input',
                        class: 'form-control form-control-lg',
                        autocomplete: "email",
                        placeholder: "Email address"
                      } %>
        </div>

        <div class="mb-3">
          <%= f.input :password,
                      required: false,
                      label: false,
                      placeholder: "Password",
                      input_html: {
                        id: 'password-input',
                        class: 'form-control form-control-lg',
                        autocomplete: "current-password",
                        placeholder: "Password"
                      } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 form-check">
            <%= f.input :remember_me,
                        as: :boolean,
                        wrapper_html: { class: 'form-check' },
                        input_html: { class: 'form-check-input' },
                        label_html: { class: 'form-check-label' } %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.button :submit,
                       "Log in",
                       class: "btn btn-primary btn-lg rounded-pill shadow-sm" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const trigger = document.getElementById('auto-fill-trigger');
    const emailInput = document.getElementById('email-input');
    const passwordInput = document.getElementById('password-input');

    if (trigger && emailInput && passwordInput) {
      trigger.addEventListener('click', function () {
        emailInput.value = 'admin@matchmeal.eu';
        passwordInput.value = 'admin@matchmeal.eu';
      });
    }
  });
</script>
